@page "/test"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Test2.Models
@using Test2.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Test2.Data.Test2Context> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="faqsubmissions/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.FAQSubmission">
    <PropertyColumn Property="faqsubmission => faqsubmission.Email" />
    <PropertyColumn Property="faqsubmission => faqsubmission.Question" />
    <PropertyColumn Property="faqsubmission => faqsubmission.Answer" />

    <TemplateColumn Context="faqsubmission">
        <a href="@($"faqsubmissions/edit?id={faqsubmission.Id}")">Edit</a> |
        <a href="@($"faqsubmissions/details?id={faqsubmission.Id}")">Details</a> |
        <a href="@($"faqsubmissions/delete?id={faqsubmission.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private Test2Context context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
