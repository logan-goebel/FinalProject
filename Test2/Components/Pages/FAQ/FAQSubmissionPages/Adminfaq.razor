@page "/faq/admin"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Test2.Models
@using Test2.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Test2.Data.Test2Context> DbFactory

<PageTitle>Answer Questions</PageTitle>

<h1>Answer Questions</h1>



<QuickGrid Class="table" Items="context.FAQSubmission">
    <PropertyColumn Property="faqsubmission => faqsubmission.Email" />
    <PropertyColumn Property="faqsubmission => faqsubmission.Question" />
    <PropertyColumn Property="faqsubmission => faqsubmission.Answer" />

    <TemplateColumn Context="faqsubmission">
        <a href="@($"faq/admin/edit?id={faqsubmission.Id}")">Submit Answer</a> |
        <a href="@($"faq/admin/delete?id={faqsubmission.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private Test2Context context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
