@page "/contactforms/delete"
@using Microsoft.EntityFrameworkCore
@using AdoptionWebsiteTest.Models
@inject IDbContextFactory<Test2.Data.Test2Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>ContactForm</h2>
    <hr />
    @if (contactform is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@contactform.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">QuestionsAndConcerns</dt>
            <dd class="col-sm-10">@contactform.QuestionsAndConcerns</dd>
        </dl>
        <EditForm method="post" Model="contactform" OnValidSubmit="DeleteContactForm" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(contactform is null)">Delete</button> |
            <a href="/contactforms">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private ContactForm? contactform;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        contactform = await context.ContactForm.FirstOrDefaultAsync(m => m.Id == Id);

        if (contactform is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteContactForm()
    {
        using var context = DbFactory.CreateDbContext();
        context.ContactForm.Remove(contactform!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/contactforms");
    }
}
