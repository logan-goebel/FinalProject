@page "/contact"
@using System.Text
@using AdoptionWebsiteTest.Models
@using AdoptionWebsiteTest.Components.Pages
<h3>Contact Page</h3>


<div>
    <form>
        <div class="contact-info mb-4">
            <p>
                <strong>Email:</strong> <a href="mailto:info@adoptadog.com">info@adoptadog.com</a><br />
                <strong>Phone:</strong> <a href="tel:+1234567890">(123) 456-7890</a>
            </p>
        </div>
        <!-- Email -->
        <div>
            *
            <label for="email"> Email:</label>
            <input type="email" id="email" @bind="Email" class="form-control" required />
        </div>

        <!-- Questions/Concerns -->
        <div>
            <label for="questions">Questions or Concerns:</label>
            <textarea id="questions" @bind="QuestionsAndConcerns" class="form-control" required></textarea>
        </div>


        <!-- Submit Button -->
        <button class="btn btn-primary" @onclick="HandleSubmit">Submit</button>
    </form>

    <!-- Error Messages -->
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mt-3">
            @ErrorMessage
        </div>
    }

    <!-- Success Message -->
    @if (IsSubmitted)
    {
        <div class="mt-3">
            <a href="/adopt-dog-documents" class="btn btn-secondary" target="_blank">View All Documents</a>
        </div>
    }
</div>

@code {
    // Form Fields
    private string Email { get; set; } = string.Empty;
    private string QuestionsAndConcerns { get; set; } = string.Empty;

    // States and House Sizes
    

    // Validation
    private string ErrorMessage { get; set; } = string.Empty;
    private bool IsSubmitted { get; set; } = false;

    private void HandleSubmit()
    {
        StringBuilder sb = new StringBuilder();
        sb.AppendLine("Contact Form Submission:");
        sb.AppendLine($"Email: {Email}");
        sb.AppendLine($"Questions or Concerns: {QuestionsAndConcerns}");

        string submissionDetails = sb.ToString();

}
}
    
